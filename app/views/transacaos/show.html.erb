<p id="notice"><%= notice %></p>
<h1>Transação</h1>
<div class="form-group col-md-5">
    <strong class="control-label">Sacado:</strong>
  <%= if(@transacao.empresa_origem)
		@transacao.empresa_origem.nome 
	  end
  %>
</div>

<div class="form-group col-md-5">
    <strong class="control-label">Nome da Empresa de Destino:</strong>
  <%= if(@transacao.empresa_destino)
		@transacao.empresa_destino.nome 
	  end 
   %>
</div>
<div class="form-group col-md-5">
  <strong class="control-label">Relação de Negócio:</strong>
  <%= @transacao.relacaoNegocio %>
</div>

<div class="form-group col-md-5">
  <strong class="control-label">Forma de pagamento:</strong>
  <%= @transacao.formaPagameto %>
</div>

<div class="form-group col-md-5">
  <strong class="control-label">Data de Pagamento:</strong>
  <%= @transacao.dataPagamento %>
</div>
<div class="form-group col-md-5">
  <strong class="control-label">Documento:</strong>
  <%= @transacao.documento %>
</div>
<div class="form-group col-md-5">
  <strong class="control-label">Valor:</strong>
  <%= number_to_currency(@transacao.valor, unit: "R$ ", separator: ",", precision: 2) %>
</div>
<div class="form-group col-md-5">
  <strong class="control-label">Data de Emissão:</strong>
  <%= @transacao.dataEmissao %>
</div>
<div class="form-group col-md-5">
  <strong class="control-label">Justificativa:</strong>
  <%= @transacao.justificativa %>
</div>

<div id="actions" class="row">
  <div class="col-md-12">
    <div class="actions">
      <%= link_to 'Editar', edit_transacao_path(@transacao), :class =>"btn btn-default" %> |
      <%= link_to 'voltar', transacaos_path, :class =>"btn btn-default" %> |
	  <%= link_to 'Nova Transação', new_transacao_path, :class =>"btn btn-default" %>
    </div>
  </div>
  </div>

